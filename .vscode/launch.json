    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'nazmc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nazmc",
                    "--package=nazmc"
                ],
                "filter": {
                    "name": "nazmc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/target/debug"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'nazmc'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=nazmc",
                    "--package=nazmc"
                ],
                "filter": {
                    "name": "nazmc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'nazmc_semantics'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=nazmc_semantics"
                ],
                "filter": {
                    "name": "nazmc_semantics",
                    "kind": "lib"
                }
            },
            "args": [],
            "expressions": "simple",
            "preRunCommands": [
                "command script import ${workspaceFolder}/.vscode/rust_prettifier_for_lldb.py"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}